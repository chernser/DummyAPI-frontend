<div class="span12">
    <div class="row-fluid">
        <h3>Object Types Management</h3>
    </div>
    <div class="row-fluid">

        <!-- Objects list -->
        <div class="span2">
            <ul class="nav nav-list"
                style="min-height: 300px; max-height: 300px; overflow: auto; border: dashed 1px #d3d3d3;">
                <li><a href="#">Resource_01</a></li>
                <li><a href="#">Resource_02</a></li>
                <li><a href="#">Resource_03</a></li>
            </ul>
            <div class="btn-group">
                <button id="remove_object_type_btn" class="btn"><i class="icon icon-minus"></i></button>
                <button id="add_object_type_btn" class="btn"><i class="icon icon-plus"></i></button>
            </div>
        </div>


        <!-- Tabs -->
        <div id="object_tabs" class="span10 tabbable">
            <ul class="nav nav-tabs">
                <li class="active"><a data-target="#instances" data-toggle="tab">Instances</a></li>
                <li><a data-target="#logic" data-toggle="tab">Logic</a></li>
                <li><a data-target="#routes" data-toggle="tab">Routes</a></li>
                <li><a data-target="#permissions" data-toggle="tab">Permissions</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="instances">
                    <div id="object_instances" style="height: 200px;border: solid 1px #d3d3d3;"></div>
                    <div class="btn-group">
                        <button class="btn btn-small"><i class="icon icon-edit"></i></button>
                        <button class="btn btn-small"><i class="icon icon-plus"></i></button>
                        <button class="btn btn-small"><i class="icon icon-minus"></i></button>
                    </div>
                    <br/>
                    <div class="form">
                        <div class="controls-group">
                            <label class="control-label">Object data</label>
                            <div class="controls">
                                <textarea rows="6" style="width:350px;"/>
                            </div>
                            <button class="btn">Save</button>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="logic">
                    <div class="form">
                        <div class="control-group">
                            <label class="control-label">Proxy function</label>
                            <div class="controls">
                                <textarea rows="10" style="width:400px"></textarea>
                            </div>
                        </div>
                        <button class="btn">Save</button>
                        <span class="inline-help" style="color: red;margin-left: 10px" id="proxy_code_error"/>
                    </div>
                </div>
                <div class="tab-pane" id="routes">
                    <div class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label">Route pattern</label>

                            <div class="controls">
                                <input type="text"/>
                                <button class="btn">Save</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane" id = "permissions">
                    <h3>Permissions</h3>
                </div>

            </div>

        </div>
    </div>
</div>