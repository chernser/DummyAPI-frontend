<div class="span12">
    <div class="row-fluid">
        <h3>Socket.Io Notification Settings</h3>
    </div>

    <div class="row-fluid">

        <div id="object_tabs" class="span12 tabbable">
            <ul class="nav nav-tabs">
                <li class="active"><a data-target="#to_client_notifications" data-toggle="tab">To Client</a></li>
                <li><a data-target="#from_client_notifications" data-toggle="tab">From Client</a></li>
                <li><a data-target="#event_callbacks" data-toggle="tab">Callbacks</a></li>
            </ul>
            <div class="tab-content">

                <div class="tab-pane active" id="to_client_notifications">
                    <div class="form">
                        <legend>Proxy Function</legend>
                        <div class="control-group">


                            <div class="controls">
                                <textarea id="proxy_function_code" rows="8" cols="100" style="width: 350px;">
                                    {{#if notify_proxy_fun}}
                                    {{notify_proxy_fun}}
                                    {{else}}
function proxy(event, data) {
return notification;
}
                                    {{/if}}
                                </textarea>
                                <button id="proxy_function_help_btn">?</button>
                            </div>
                            <button id="save_proxy_function_code_btn" class="btn">Save</button>
        <span class="inline-help" style="color: red;margin-left: 10px"
              id="proxy_function_code_error"/>
                        </div>

                    </div>

                    <div class="form">
                        <legend>Sending Notifications</legend>
                        <label>To client(s)</label>
                        <select id="to_socket_io_client"></select>

                        <div class="control-group">
                            <label>Event name</label>

                            <div class="controls">
                                <input id="event_name" type="text" value="event:test"/>
                            </div>
                        </div>
                        <div class="control-group">
                            <label>Event data</label>

                            <div class="controls">
                                <textarea id="event_data" rows="8" cols="100" style="width: 350px">
{
"value": 123
}
                                </textarea>
                            </div>
                        </div>
                        <button id="send_notification_btn" class="btn">Send</button>
                        <i id="sending_result"></i>
                    </div>
                </div>
                <!-- tab end -->

                <!-- Event log tab -->
                <div class="tab-pane" id="from_client_notifications">

                    <div class="span10">
                        <label>Events log</label>
                        <textarea cols="200" rows="8" class="span9" id="events_log"></textarea>
                    </div>
                </div>

                <!-- Event callbacks -->
                <div class="tab-pane" id="event_callbacks">
                    <div class="row-fluid">
                        <div class="span10">
                            <table id="event_callbacks_tbl" style="width: 700px;"></table>
                            <div class="btn-group">
                                <button class="btn"><i class="icon icon-edit"></i></button>
                                <button class="btn"><i class="icon icon-minus"></i></button>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid" style="margin-top: 15px;">

                        <div class="form span5">
                            <div class="">
                                <label>Event name</label>
                                <input type="text" />
                                <label class="checkbox pull-right">
                                    <input type="checkbox"/>
                                    Enabled
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="form span5">
                            <label>Callback function</label>
                            <textarea id="new_callback_function_code" rows="7" cols="100" class="span12">
function(event_data) {
var response = { value: "123" };
return response;
}
                            </textarea>
                            <button class="btn">Add/Update</button>
                        </div>


                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
